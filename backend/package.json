{
  "name": "virtualrollcall-backend",
  "version": "1.0.0",
  "description": "VirtualRollCall Backend API Server - Complete attendance management system",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node scripts/seedDatabase.js",
    "clean": "rm -rf reports/*.pdf logs/*.log",
    "build": "echo 'Backend build complete'",
    "docker:build": "docker build -t virtualrollcall-backend .",
    "docker:run": "docker run -p 5000:5000 virtualrollcall-backend"
  },
  "keywords": [
    "attendance",
    "education",
    "school",
    "management",
    "nodejs",
    "express",
    "socketio",
    "realtime"
  ],
  "author": "VirtualRollCall Development Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.7.4",
    "dotenv": "^16.3.1",
    "puppeteer": "^21.5.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "express-rate-limit": "^7.1.5",
    "multer": "^1.4.5-lts.1",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1",
    "joi": "^17.11.0",
    "moment": "^2.29.4",
    "lodash": "^4.17.21",
    "uuid": "^9.0.1",
    "nodemailer": "^6.9.7",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "pdfkit": "^0.13.0",
    "sharp": "^0.32.6",
    "node-cron": "^3.0.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "concurrently": "^8.2.2",
    "@types/jest": "^29.5.8",
    "cross-env": "^7.0.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/__tests__/**/*.js", "**/?(*.)+(spec|test).js"],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!reports/**",
      "!public/**"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/virtualrollcall.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/virtualrollcall/issues"
  },
  "homepage": "https://github.com/your-org/virtualrollcall#readme"
}